@{
    Layout = "_LayoutSettings";
}
@model ImageCore.ViewModel.UserSettings.ChangeProfileImageViewModel

@if (TempData["Message"] is not null)
{
    <p>
        @TempData["Message"]
    </p>
}

@if (ViewData["Invalid"] is not null)
{
    <p>
        Einige deiner Angaben sind nicht richtig
    </p>
}

<h1 class="settingsTitle">Benutzerprofilbild ändern</h1>
<form class="settingsForm" asp-controller="ChangeUserImage" asp-action="Store" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <span>Profilbild</span>
    <input class="settingsInput" type="file" asp-for="File" name="File">
    <span class="warningText" asp-validation-for="File"></span>
    <button type="submit">Senden</button>
</form>