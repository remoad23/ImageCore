@model ImageCore.ViewModel.LoginViewModel
@{
    Layout = "_NoHeader";
}

<div class="loginArea">
    <form class="loginBlock" asp-controller="Login" asp-action="login" method="post">
        <h1>Login</h1>
        <span>Username</span>
        <input name="userName" asp-for="userName" type="text" placeholder=" " value="User1">
        <span class="warningText" asp-validation-for="userName"></span>
        <span>Password</span>
        <input type="password" name="password" asp-for="password" placeholder=" " value="Password23@@">
        <span class="warningText" asp-validation-for="password"></span>
        <button type="submit">Login</button>
    </form>
</div>
